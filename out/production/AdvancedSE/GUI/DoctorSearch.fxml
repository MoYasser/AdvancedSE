<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.DoctorSearch">
   <children>
      <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/SOUL-Logo-2-200000.png" />
         </image>
         <effect>
            <GaussianBlur />
         </effect>
      </ImageView>
      <TextField fx:id="appointmentID" layoutX="125.0" layoutY="100.0" />
      <Button fx:id="searchBtn" layoutX="292.0" layoutY="100.0" mnemonicParsing="false" onAction="#searchApp" text="Search" />
      <Label layoutX="40.0" layoutY="38.0" text="Please Enter Appointment ID" textFill="#b21d1d">
         <font>
            <Font size="25.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>
   </children>
</AnchorPane>
